# SHELL
alias ls='ls -G'
alias ll='ls -la'
alias reload='source ~/.zshrc && clear'
alias bat='bat --theme=GitHub --style=changes'

# NAVIGATION
alias scratch='cd ~/scratch'
alias work='cd ~/work'

# RUBY
alias be='bundle exec'
alias bi='bundle install'
alias irb='pry'

# DOCKER
alias d='docker'
alias dc='docker-compose'
alias dm='docker-machine'
alias dn='docker node'
alias ds='docker service'

# TMUX
alias tmux='tmux -u'

# KUBERNETES
alias k='kubectl'
alias kall='kubectl --all-namespaces'

# TERRAFORM
alias t='terraform'
