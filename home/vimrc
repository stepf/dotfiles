" Colors
syntax enable                             " enable syntax processing

" UI Config
set number                                " show line numbers
set showcmd                               " show command in bottom bar
set wildmenu                              " visual autocomplete for command menu
set lazyredraw                            " redraw only when we need to.
set showmatch                             " highlight matching [{()}]
set t_Co=256                              " enable 256 colours

" Spaces & Tabs
set tabstop=2                             " width of \t
set expandtab                             " tabs are spaces
set listchars=trail:∙,tab:>―              " character to show in place of spaces and tabs
set list                                  " show whitespaces and tabs

" Highlight current line and column
set cursorline                            " enable cursorline
hi cursorline cterm=none term=none        " disable underlining
hi CursorLine ctermbg=229                 " set bg colour

" Misc
set backspace=indent,eol,start            " allow backspace over everything
