[core]
	excludesfile = /Users/sdang/.gitignore_global
  pager = less -R
[color]
  ui = true
[color "diff"]
  old = red reverse
  new = green reverse
[user]
  name = Stefan Dang

[push]
  default = simple
[github]
  user = stepf

[alias]
  a = !git ls-files --modified --others --exclude-standard -t | fzf-tmux -m | cut -d' ' -f2 | xargs git add
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
  amend = !git commit --amend --no-edit
  branches = branch -av
  ci = commit
  co = checkout
  df = !git ls-files --modified | fzf-tmux -m | xargs git diff
  jedi = push --force-with-lease
  l = !git --no-pager log --oneline --decorate -n 20
  lg = !git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  ll = log --stat --abbrev-commit
  pb = !git push -u origin $(git rev-parse --abbrev-ref HEAD) # push and track the current branch
  st = !git status --short | sort
  unstage = reset HEAD --
  wtf = diff --name-only --diff-filter=U
[filter "email"]
  clean = "sed -i '/email =/ d'"
[merge]
  ff = only
